<UserControl
	x:Class="SudokuApp.Views.SudokuView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:model="clr-namespace:SudokuApp.Model;assembly=SudokuApp.Model"
	xmlns:viewModels="clr-namespace:SudokuApp.ViewModels"
	d:DataContext="{Binding}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Design.DataContext>
		<viewModels:SudokuViewModel />
	</Design.DataContext>
	<ItemsControl Items="{Binding Sudoku.Cells}">
		<ItemsControl.ItemsPanel>
			<ItemsPanelTemplate>
				<UniformGrid
					Width="360"
					Height="360"
					Columns="9"
					Rows="9" />
			</ItemsPanelTemplate>
		</ItemsControl.ItemsPanel>
		<ItemsControl.ItemTemplate>
			<DataTemplate DataType="model:SudokuCell">
				<ToggleButton Command="{Binding TestCommand}">
					<Panel>
						<TextBlock IsVisible="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Text="{Binding Solution}" />
						<TextBlock IsVisible="{Binding !IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Text="{Binding PencilMarksAsString}" />
					</Panel>
				</ToggleButton>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</UserControl>